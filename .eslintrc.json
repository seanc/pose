{
  "extends": ["airbnb/base", "airbnb/rules/strict"],
  "rules": {
    "require-jsdoc": [2, {
      "require": {
        "MethodDefinition": true,
        "ClassDeclaration": true
      }
    }],
    "consistent-return": 2,
    "no-undefined": 2,
    "max-len": [2, 80, 2],
    "indent": [2, 2],
    "valid-jsdoc": [2, {
      "requireReturn": false,
      "prefer": {
        "returns": "return",
        "arg": "param",
        "argument": "param"
      }
    }],
    "no-console": 0
  },
  "env": {
    "node": true
  }
}
